%section.row.align-items-center
  %h1.fw-bold.display-6.mb-3
    = @trip.title

  %p.mb-3
    = @trip.description

  %p.mb-3
    = "From " + @trip.formatted_start_date + " to " + @trip.formatted_end_date

  - if @photo_url.present?
    = image_tag(@photo_url, class: "img-fluid")

  = link_to(trip_plans_path(@trip), class: "btn btn-info mx-2") do
    %i.bi.bi-plus-circle &nbsp;
    Show plans

  = link_to(edit_trip_path(@trip), class: "btn btn-primary mx-2") do
    %i.bi.bi-pencil &nbsp;
    Edit this trip

  = link_to(trips_path, class: "btn btn-secondary mx-2") do
    %i.bi.bi-arrow-left-circle &nbsp;
    Back to all trips

  = link_to(trip_path(@trip),
            class: "btn btn-danger mx-2",
            method: :delete,
            data: { confirm: "Are you sure you want to delete this trip?" }) do
    %i.bi.bi-trash &nbsp;
    Delete trip
