%div{
  class: "toast align-items-center text-bg-#{notification_type} border-0",
  role: "alert",
  "aria-live": "assertive",
  "aria-atomic": "true",
  "data-bs-delay": 3000,
}
  .d-flex
    .toast-body.d-flex.align-items-center
      %i{ class: "bi user-select-none me-2 toast-icon-#{notification_type}" }
      %p.mb-0= message
    %button{
      class: "btn-close btn-close-on-#{notification_type} me-2 m-auto",
      "data-bs-dismiss": "toast",
      "aria-label": "Close",
    }
