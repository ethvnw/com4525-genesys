#scannable-tickets-table-container
  %table#scannable-tickets-table.table.table-fit
    %tbody
      %thead
        %tr
          %th.text-break.ps-3 Title
          %th.text-break Code
          %th.pe-3 Actions
      - plan.scannable_tickets.decorate.each do |ticket|
        %tr.p-1
          %td.align-middle.w-50.text-break.ps-3
            = ticket.title_value
          %td.align-middle.w-50.text-break
            = ticket.code
          %td.pe-3.align-middle
            = link_to(trip_plan_scannable_ticket_path(plan.trip, plan, ticket_id: ticket.id),
                      method: :delete,
                      "data-turbo-method": :delete,
                      data: turbo_confirm("Are you sure you want to delete this ticket?"),
                      class: "btn btn-secondary btn-sm text-nowrap m-0") do
              %i.bi.bi-trash
              Remove
