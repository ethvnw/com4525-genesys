#sidebar.d-flex.flex-column.flex-shrink-0.pb-3.px-lg-3.bg-light
  .sticky-top.pt-3
    = link_to(root_path, class: "navbar-brand px-3") do
      = image_pack_tag("images/roamio_brand_icon_d_grey.png", height: 24)
    %hr
    %ul.nav.nav-pills.nav-flush.flex-column
      %li.nav-item
        = render("partials/layouts/navbar_user_dropdown")
      #inbox-container
        = navbar_link_to("Inbox", "bi-inbox", inbox_path, inbox_count)
    %hr
    %ul#navigation-links.nav.nav-pills.nav-flush.flex-column
      = render("partials/layouts/navigation_links")
