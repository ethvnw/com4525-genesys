- if pagy.next
  #pager-mobile.my-5.d-flex.flex-column.align-items-center
    = link_to(url_for(request.query_parameters.merge(page: pagy.next, scroll: "infinite")),
              data: { turbo: "true", turbo_stream: "true", controller: "infinite-scroll" }) do
      = image_pack_tag("images/roamio_brand_icon_d_grey.webp",
                       height: 18,
                       width: 24,
                       "aria-hidden": "true",
                       alt: "Roamio Logo")
