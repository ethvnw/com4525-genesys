#user-account-dropdown.dropdown
  %a.nav-link.d-flex.align-items-center.text-decoration-none.dropdown-toggle{
    "data-bs-toggle": "dropdown",
    "aria-label": "Account menu Button for #{current_user.username}",
    "aria-haspopup": "true",
    "aria-expanded": "false",
    role: "button",
    tabindex: 0,
  }
    = render("partials/layouts/user_avatar", user: current_user.decorate)
    .dropdown-username
      = current_user.username

  .dropdown-menu.dropdown-menu-end
    %p.dropdown-header.text-dark.fw-semibold.pb-0
      = current_user.email
    %p.small.dropdown-header.text-secondary.pt-0
      @#{current_user.username}
    .dropdown-divider
    = link_to(edit_user_registration_path,
              class: "dropdown-item",
              method: :get,
      tabindex: 0) do
      My Account
    - if can?(:access, :admin_dashboard)
      = link_to(admin_dashboard_path,
                class: "dropdown-item",
                method: :get,
        tabindex: 0) do
        Admin Dashboard
    - if can?(:access, :reporter_dashboard)
      = link_to(reporter_dashboard_path,
                class: "dropdown-item",
                method: :get,
        tabindex: 0) do
        Reporter Dashboard
    .dropdown-divider
    = link_to(destroy_user_session_path,
              class: "dropdown-item",
              method: :delete,
      tabindex: 0) do
      Sign Out
