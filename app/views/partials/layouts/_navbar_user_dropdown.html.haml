#user-account-dropdown.dropdown
  %a.nav-link.d-flex.align-items-center.link-dark.text-decoration-none.dropdown-toggle{
    "aria-expanded": "false",
    "data-bs-toggle": "dropdown",
    role: "button",
  }
    = image_tag(current_user.avatar_url, height: 24, class: "rounded-circle me-2 me-lg-3")
    .dropdown-username
      = current_user.username
  .dropdown-menu.dropdown-menu-end
    %h6.dropdown-header.fw-semibold.text-secondary
      = current_user.email
    = link_to(edit_user_registration_path,
              class: "dropdown-item",
              method: :get) do
      My Account
    - if can?(:access, :admin_dashboard)
      = link_to(admin_dashboard_path,
                class: "dropdown-item",
                method: :get) do
        Admin Dashboard
    - if can?(:access, :reporter_dashboard)
      = link_to(reporter_dashboard_path,
                class: "dropdown-item",
                method: :get) do
        Reporter Dashboard
    .dropdown-divider
    = link_to(destroy_user_session_path,
              class: "dropdown-item",
              method: :delete) do
      Sign Out
