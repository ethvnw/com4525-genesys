= simple_form_for(resource,
                  as: resource_name,
                  url: registration_path(resource_name),
                  builder: ValidatedFormBuilder,
                  errors: errors,
                  html: { "data-turbo": "true" }) do |f|
  = f.validated_input(:email,
                      required: true,
                      autofocus: true)

  = f.validated_input(:username,
                      required: true,
                      autofocus: true,
                      hint: "Must be between 6 and 20 characters")

  = f.validated_input(:password,
                      required: true,
                      autocomplete: "new-password",
                      hint: "Must contain upper and lower-case letters, numbers and be minimum 12 characters")

  = f.validated_input(:password_confirmation,
                      required: true,
                      autocomplete: "new-password")

  .form-actions.mt-4.d-flex.justify-content-end.gap-2
    = f.button(:submit, "Sign Up", class: "btn-primary px-4")
