= link_to(path,
          class: "quick-link-btn btn btn-light",
                   "aria-label": title,
                   "aria-description": description,
                   tabindex: 0) do
  .btn-icon
    %i{ class: "bi #{icon}" }
  .btn-body
    %h3.fs-6.text-dark{ role: "presentation", "aria-hidden": "false" }= title
    %p.small.fw-semibold.roamio-base.text-secondary= description
