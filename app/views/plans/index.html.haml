- previous_start_date = nil
- @plans.each do |plan|
  - if previous_start_date != plan.start_date.strftime("%d %B %Y")
    - previous_start_date = plan.start_date.strftime("%d %B %Y")
    %h4.my-3.border-bottom= plan.start_date.strftime("%A, %d %B %Y")

  - if plan.plan_type.starts_with?("travel_")
    -# = link_to(plan_path(plan), class: "plan-card text-decoration-none") do
    = render("plans/cards/travel_card", plan: plan)
  - else
    -# = link_to(plan_path(plan), class: "plan-card text-decoration-none text-dark") do
    = render("plans/cards/event_card", plan: plan)
