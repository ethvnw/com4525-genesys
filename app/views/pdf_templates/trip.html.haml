%html
  %head
    %meta{ charset: "utf-8" }
    %title= trip.title
    %link{ rel: "stylesheet", href: "https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" }

  %body
    = image_tag(asset_url("/pdf_logo.png"), height: 30, class: "float-end")
    %h1= trip.title
    %h2.fs-5.mb-5= trip.formatted_date_range

    - plan_groups.each_with_index do |(start_date, plans), _index|
      .mb-4
        %p.border-bottom= start_date.strftime("%A %d %b")

        - plans.each do |plan|
          .row.mb-3
            .col-3
              %p.mb-0
                = plan.start_date.strftime("%H:%M")
                - unless plan.end_date.blank?
                  = "- #{plan.end_date.strftime("%H:%M")}"
            .col-9
              %p.mb-0= plan.title
              %p.mb-0
                📍 #{plan.start_location_name}
                - unless plan.end_location_name.blank?
                  = " - #{plan.end_location_name}"
