.row
  %h1.fs-2.mb-0
    Account Settings
  .my-2
    = link_to(:back,
              class: "btn btn-secondary",
              "aria-label": "Back to previous page",
              tabindex: 0) do
      %i.bi.bi-arrow-left{ "aria-hidden": "true" } &nbsp;
      Back
  %hr
  .col-12.col-md-3.mb-3
    %h2.fs-4 Avatar Image
  .col-12.col-md-9.mb-3
    #avatar-form-container
      = render("partials/devise/registrations/avatar_form", user: @current_user)
  %hr
  .col-12.col-md-3.mb-3
    %h2.fs-4 Personal Details
  .col-12.col-md-9.mb-3
    = render("partials/devise/registrations/edit", errors: @errors)
  %hr
  .col-12.col-md-3.mb-3
    %h2.fs-4 Delete Account
  .col-12.col-md-9.mb-3
    .card.bg-danger.text-light.mb-3
      .card-body
        %h3.fs-5
          Permanently Delete Your Account
        %p This action is unrecoverable and cannot be undone.
        = button_to(registration_path(resource_name),
                    data: { confirm: "Are you sure? This action is unrecoverable and cannot be undone." },
                    class: "btn btn-danger",
                    method: :delete,
                    "aria-label": "Permanently Delete your Account",
                    "aria-description": "This action is unrecoverable and cannot be undone.",
                    tabindex: 0) do
          %i.bi.bi-exclamation-triangle{ "aria-hidden": "true" } &nbsp;
          Delete your Account
