.row
  %h1 Account Settings
  .mb-3
    = link_to(:back, class: "btn btn-secondary") do
      %i.bi.bi-arrow-left{ "aria-hidden": "true" }
      Back

  %hr
  %h2.fs-4 Avatar Image
  #avatar-form-container
    = render("partials/devise/registrations/avatar_form", user: @current_user)
  %hr
  
  .col-12.col-xxl-6
    %h2.fs-4 Personal Details
    = render("partials/devise/registrations/edit", errors: @errors)

  %hr
    .col-12.col-xxl-6
      .card.bg-danger.text-light
        .card-body
          %h3.fs-5 
            %i.bi.bi-trash-fill
            Permanently Delete Your Account
          %p  This action is final and cannot be undone
          = button_to("Delete your account",
                      registration_path(resource_name),
                      data: { confirm: "Are you sure? This action is unrecoverable and cannot be undone." },
                      class: "btn btn-dark text-light",
                      method: :delete)
