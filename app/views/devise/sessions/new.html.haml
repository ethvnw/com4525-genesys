- content_for(:title, "Log In")

.d-flex.flex-fill
  .row.w-100
    .col-md-6.d-none.d-xl-flex.justify-content-center.align-items-center
      -# TODO: Replace images and update transition interval
      #carouselExample.carousel.carousel-fade.w-100{ data: { bs_ride: "carousel", bs_interval: "2000" } }
        .carousel-inner
          .carousel-item.active
            = image_pack_tag("images/login_mobile_desktop.png", class: "d-block w-100 img-fluid")
          .carousel-item
            = image_pack_tag("images/roamio_explorer_brand_logo_d_grey.png", class: "d-block w-100 img-fluid")

    .col-xl-6.d-flex.justify-content-center.align-items-center
      .card.login-card
        .card-body
          .container
            .d-flex.flex-column.align-items-center.pb-4
              = link_to("/", class: "mt-4") do
                = image_pack_tag("images/roamio_brand_icon_d_grey.png", height: 40)

          = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-inputs.py-2
              = f.input(:login,
                        required: false,
                        autofocus: true,
                        input_html: { placeholder: "Email address or Username", class: "mb-3" },
                        label: false)
              = f.input(:password,
                        required: false,
                        input_html: { placeholder: "Password", class: "mb-3", autocomplete: "new-password" },
                        label: false)
            .form-actions
              = f.button(:submit,
                         "Log In",
                         class: "btn btn-sm fw-bold btn-primary w-100")
          .d-flex.flex-column
            = render("devise/shared/links")
